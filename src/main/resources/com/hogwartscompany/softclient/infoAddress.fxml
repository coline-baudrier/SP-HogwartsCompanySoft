<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hogwartscompany.softclient.InfoAddressController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0" opacity="0.75" pickOnBounds="true">
         <image>
            <Image url="@../../../assets/image/wallpaper.jpg" />
         </image>
      </ImageView>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="201.0" layoutY="34.0" prefHeight="67.0" prefWidth="499.0" style="-fx-background-color: #56738C; -fx-background-radius: 20;" text="Liste des adresses" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Script MT Bold" size="40.0" />
         </font>
      </Label>
      <TableView fx:id="addressTable" layoutY="250.0" opacity="0.95" prefHeight="350.0" prefWidth="900.0">
        <columns>
          <TableColumn fx:id="idAddress" prefWidth="34.0" text="ID" />
          <TableColumn fx:id="buildingFloor" prefWidth="48.0" text="Etage" />
            <TableColumn fx:id="buildingName" prefWidth="141.0" text="Bâtiment" />
            <TableColumn fx:id="lineAddress1" prefWidth="194.0" text="Adresse" />
            <TableColumn fx:id="lineAddress2" prefWidth="189.0" text="Complément" />
            <TableColumn fx:id="departmentCode" prefWidth="47.0" text="Dpt" />
            <TableColumn fx:id="cityName" prefWidth="108.0" text="Ville" />
        </columns>
      </TableView>
      <Button fx:id="buttonClosePopUp" layoutX="804.0" layoutY="46.0" mnemonicParsing="false" onAction="#closePopUp" prefHeight="43.0" prefWidth="51.0" style="-fx-background-color: #205A8C; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 0);">
         <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../assets/icons/reliques.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
